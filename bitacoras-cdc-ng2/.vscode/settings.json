// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/tmp": true,
        "**/.vscode": true
    },
    "editor.fontSize": 12,
    "editor.formatOnType": true,
    "material_theme_accent_cyan": true, // Set cyan accent color
    "typescript.tsdk": "node_modules/typescript/lib"
}